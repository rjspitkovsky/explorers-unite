<% if @trip.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@trip.errors.count, "error") %>
      prohibited this account from being saved:
    </h2>

    <ul>
    <% @trip.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<h1>Have your thoughts evolved on this trip? Share them here!</h1>

<%= form_for @trip do |f| %>
  <%= f.label :recommend? %>
  <%= f.check_box :recommend %><br>

  <%= f.label :comment %>
  <%= f.text_area :comment %><br>
  <%= f.submit %>

<% end %>
